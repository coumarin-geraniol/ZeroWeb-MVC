@model List<OrderVM>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Siparişler Listesi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
         
        <table id="tblData" class="table table-hover table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Telefon Numarası</th>
                    <th>E-posta</th>
                    <th>Durum</th>
                    <th>Toplam</th>
                    <th>İşlemler</th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}